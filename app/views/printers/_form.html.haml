= simple_form_for [@printer], :remote => true , :html => {:class => 'well'} do |f|
  
	= f.error_notification

	.form_group
		= f.input :name, input_html: {class: 'form-control'}

	.form_group
		= f.input :location, input_html: {class: 'form-control'}

	.form_group
		= f.input :portname, input_html: {class: 'form-control'}

	.form_group
		= f.input :serial_number, input_html: {class: 'form-control'}

	.form_group
		= f.input :inventory_number, input_html: {class: 'form-control'}

	%b State
	.form_group
		= f.input :hardware_state_id, label: false, :collection => @hardware_states,:selected => @printer.hardware_state_id,:include_blank => "Please select", input_html: {class: 'form-control'}

	.form-group
		= f.input :comment, :as => :text, input_html: {class: 'form-control'}

	= f.button :submit, remote: true, class: "btn btn-primary"