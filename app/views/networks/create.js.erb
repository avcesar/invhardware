$(document).ready(function() {
		var node = $('#networks').dataTable().fnAddData(["<%= @network.net %>","<%= @network.nameserver %>","<%= @network.domain %>","<%= @network.user %>","<%= @network.active %>", '<a class="btn btn-primary btn-xs" data-remote="true" href="/networks/<%=@network.id%>">Show</a> <a class="btn btn-success btn-xs" data-remote="true" href="/networks/<%=@network.id%>/edit">Edit</a> <a class="btn btn-danger btn-xs" data-confirm="Are you sure?" data-method="delete" data-remote="true" href="/networks/<%=@network.id%>" rel="nofollow">Destroy</a>']);
		var row = $('#networks').dataTable().fnGetNodes(node);
		$(row).attr('id',"network_<%= @network.id %>");
		$('#networks tr td:nth-child(6)').addClass('right');
});

